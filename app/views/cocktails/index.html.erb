
   <p id="notice"><%= notice %></p>
   <h1 class="text-center font text white">-What cocktail shall we drink today?-</h1>
   <div class ="menu-container center">
     <%= link_to "New Cocktail", new_cocktail_path, class: "cocktail-btn" %>
   </div>

    <div class ="menu-cocktail">
      <div class="row">

      <%@cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-md-4">
      <div class = "card">
        <%= link_to cocktail_path(cocktail) do%>
       <!--  to get the link you must put a do and an end and inside the do and end you put whatever html you want -->

         <%= cl_image_tag cocktail.photo.url(:bright_face, :effect => "sharpen"), :class => "item"%>
           <div class="card-description">
             <h2> <%= cocktail.name %></h2>
           <!--  to get the cocktail name ibside the card you must create a div becasue that is the ler wagon layout componenets been divined
           </div> -->
           </div>
         <% end %>
         </div>
        <% end %>

      </div>
    </div>
    </div>

